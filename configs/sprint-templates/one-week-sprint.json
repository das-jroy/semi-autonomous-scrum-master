{
  "name": "1-Week Sprint Template", 
  "description": "Fast-paced 1-week sprint configuration",
  "duration_weeks": 1,
  "phases": {
    "planning": {
      "duration_hours": 2,
      "activities": ["quick planning", "task breakdown"]
    },
    "development": {
      "duration_days": 4,
      "activities": ["development", "testing", "review"]
    },
    "review": {
      "duration_hours": 1,
      "activities": ["demo", "feedback"]
    },
    "retrospective": {
      "duration_minutes": 30,
      "activities": ["quick reflection", "immediate improvements"]
    }
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration_minutes": 10
    },
    "sprint_review": {
      "frequency": "end_of_sprint",
      "duration_hours": 1
    },
    "retrospective": {
      "frequency": "end_of_sprint",
      "duration_minutes": 30
    }
  },
  "metrics": {
    "velocity": "story_points_completed",
    "cycle_time": "time_to_completion",
    "throughput": "items_completed"
  }
}
